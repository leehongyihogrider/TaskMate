<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- User Greeting Section -->
    <RelativeLayout
        android:id="@+id/greetingSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi (user), nice to see you!"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_profile_placeholder"
            android:background="@drawable/rounded_background"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <!-- Filters Section -->
    <LinearLayout
        android:id="@+id/filtersSection"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/greetingSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Filter: All -->
        <Button
            android:id="@+id/btnAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All (0)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E0E0E0" />

        <!-- Filter: Urgent -->
        <Button
            android:id="@+id/btnUrgent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Urgent (0)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E57373" />

        <!-- Filter: Due Soon -->
        <Button
            android:id="@+id/btnDueSoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Due Soon (0)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#81C784" />
    </LinearLayout>

    <!-- Empty Task Placeholder -->
    <TextView
        android:id="@+id/tvNoTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tasks to display"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filtersSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/navAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Add Task" />

        <!-- Settings Button -->
        <ImageView
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
